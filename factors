#include <stdio.h>
#include <math.h>
#include <stdlib.h>

void factory(int num) {
    if (num % 2 == 0) {
        int i = 2;
        printf("%d=%d*%d\n", num, num / i, i);
    } else {
        int sq = floor(sqrt(num)) + 1;
        for (int i = 3; i < sq; i += 2) {
            if (num % i == 0) {
                printf("%d=%d*%d\n", num, num / i, i);
                return;
            }
            if (num % (sq + i) == 0) {
                printf("%d=%d*%d\n", num, sq + i, num / (sq + i));
                return;
            }
            if (num % (sq - i) == 0) {
                printf("%d=%d*%d\n", num, sq - i, num / (sq - i));
                return;
            }
        }
    }
}

void factors(const char *filename) {
    FILE *my_file = fopen(filename, "r");
    if (my_file == NULL) {
        perror("Error opening file");
        exit(EXIT_FAILURE);
    }

    char line[256];
    while (fgets(line, sizeof(line), my_file) != NULL) {
        int n = atoi(line);
        factory(n);
    }

    fclose(my_file);
}

int main(int argc, char *argv[]) {
    if (argc != 2) {
        fprintf(stderr, "Usage: %s <filename>\n", argv[0]);
        return EXIT_FAILURE;
    }

    factors(argv[1]);

    return 0;
}

